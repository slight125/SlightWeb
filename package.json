{
  "name": "sight-tech",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "server",
    "web"
  ],
  "packageManager": "pnpm@9.7.0",
  "scripts": {
    "dev": "concurrently -k -n server,web -c blue,green \"pnpm --filter ./server run dev\" \"pnpm --filter ./web run dev\"",
  "dev:server": "pnpm -C server run dev",
  "dev:web": "pnpm -C web run dev",
    "build": "pnpm -r run build",
  "build:server": "pnpm -C server run build",
  "build:web": "pnpm -C web run build",
    "start": "pnpm --filter ./server run start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
